# MPS Connect Frontend Dockerfile
FROM nginx:alpine

# Copy frontend files
COPY index.html /usr/share/nginx/html/index.html
COPY env.js /usr/share/nginx/html/env.js
COPY gemini-frontend-integration.js /usr/share/nginx/html/gemini-frontend-integration.js
COPY test-frontend.html /usr/share/nginx/html/test-frontend.html

# Copy nginx configuration for SPA routing (optional)
# COPY web/nginx.conf /etc/nginx/nginx.conf

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
